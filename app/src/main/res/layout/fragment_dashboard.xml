<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to CareCircle!"
        android:textSize="18sp"
        android:padding="16dp" />

    <Button
        android:id="@+id/loginAsChildButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="navigateToChild"
        android:text="Login as Child" />

    <Button
        android:id="@+id/loginAsParentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="navigateToParent"
        android:text="Login as Parent" />

</LinearLayout>