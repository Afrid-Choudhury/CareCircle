<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/addChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD A CHILD FUNCTION"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/childNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter child's name"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/childPhoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter child's phone no."
        android:inputType="phone"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/addChildButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD CHILD"
        android:backgroundTint="#0000FF"
        android:textColor="#FFFFFF" />
</LinearLayout>
